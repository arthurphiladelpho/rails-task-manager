<ul>
  <% @tasks.each do |task| %>
    <li>
      <strong><%= task.title %></strong>
      <%=  link_to task.title, task_path(task) %>
      <%= task.details %>
      <%= check_box_tag 'completed', "is_done", task.completed %>
    </li>
  <% end %>
</ul>


